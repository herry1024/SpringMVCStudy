	<beans:bean id="RequestMappingHandlerMapping" name="handlerMapping" class="org.springframework.web.servlet.mvc.method.annotation.RequestMappingHandlerMapping">
		<beans:property name="useSuffixPatternMatch" value="false"></beans:property>
	</beans:bean>

</beans:beans>
